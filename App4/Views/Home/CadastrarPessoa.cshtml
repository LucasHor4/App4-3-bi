@model App4.Models.Pessoa
@{
    ViewData["Title"] = "CadatrarPessoa";
}

<h2>Cadastrar Pessoa</h2>

<form action="" method="post">
    <hr/>

    <div class="form-group">
        <label class="control-label" asp-for="Codigo"></label>
        <span asp-validation-for="Codigo" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Codigo"/> 
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="NomePessoa"></label>
        <span asp-validation-for="NomePessoa" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="NomePessoa"/>
        </div>
    </div> 

    <div class="form-group">
        <label class="control-label" asp-for="Login"></label>
        <div class="col-10">
            <input class="control-label" asp-for="Login"/>    
        </div>
     </div>

    <div class="form-group">
        <label class="control-label" asp-for="Senha"></label>
        <div class="col-10">
            <input type="password" class="control-label" asp-for="Senha" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="ConfirmaSenha"></label>
        <div class="col-10">
            <input type="password" class="control-label" asp-for="ConfirmaSenha" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Email"></label>
        <div class="col-10">
            <textarea class="control-label" asp-for="Email"></textarea>
        </div>
    </div>
          
    <div class="form-group">
        <label class="control-label" asp-for="Obs"></label>
        <div class="col-10">
            <textarea class="control-label" asp-for="Obs"></textarea>
        </div>
    </div>

    <br/>

    <div class="form-group">
        <div class="col-md-offset-2 col-10">
            <input type="submit" value="cadastrar" class="btn-primary" />
            <a class="btn-secundary" href="~/Home/Index">Cancelar</a>
        </div>
    </div>

</form>