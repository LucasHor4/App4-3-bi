@model App4.Models.Produto
@{
    ViewData["Title"] = "CadatrarProduto";
}

<h2>Cadastrar Produto</h2>

<form action="" method="post">
    <hr />

    <div class="form-group">
        <label class="control-label" asp-for="Codigo"></label>
        <span asp-validation-for="Codigo" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="Codigo" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="NomeProduto"></label>
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
        <div class="col-10">
            <input class="control-label" asp-for="NomeProduto" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Qtd"></label>
        <div class="col-10">
            <input class="control-label" asp-for="Qtd" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Descricao"></label>
        <div class="col-10">
            <textarea class="control-label" asp-for="Descricao"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="FornecedorEmail"></label>
        <div class="col-10">
            <textarea class="control-label" asp-for="FornecedorEmail"></textarea>
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-10">
            <input type="submit" value="cadastrar" class="btn-primary" />
            <a class="btn-secundary" href="~/Home/Index">Cancelar</a>
        </div>
    </div>

</form>
